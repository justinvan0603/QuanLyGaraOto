@model QuanLyGaraOto.Models.THO
@{
    ViewBag.Title = "Thêm thông tin thợ";
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
}
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <h3 class="text-center" style="color: green;">THÊM THÔNG TIN THỢ</h3>
    @using (Html.BeginForm("ThemMoi", "Tho", FormMethod.Post))
    {
        <div class="form-group">
            <label class="input-sm">Họ tên:</label>
            @Html.TextBoxFor(m => m.TENTHO, new { @class = "form-control input-sm", @maxlength = 50 })
            @Html.ValidationMessage("TENTHO", new { @style = "color:red;" })
        </div>
        <div class="form-group">
            <label class="input-sm">Số điện thoại:</label>
            @Html.TextBoxFor(m => m.SDT, new { @class = "form-control input-sm", onkeypress="return event.charCode >= 48 && event.charCode <= 57", @maxlength=11 })
            @Html.ValidationMessage("SDT", new {@style = "color:red;"})
        </div>
        <div class="form-group">
            <label class="input-sm">Địa chỉ:</label>
            @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control input-sm", @maxlength = 200 })
            @Html.ValidationMessage("DIACHI", new {@style = "color:red;"})
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-floppy-save"></span> Lưu</button>
        </div>
    }
</body>
