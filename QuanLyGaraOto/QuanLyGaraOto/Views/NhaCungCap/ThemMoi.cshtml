@model List<QuanLyGaraOto.Models.NHOMNHACUNGCAP>
@{
    ViewBag.Title = "Thêm thông tin nhà cung cấp";
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
}
@Html.Raw(TempData["msg"])
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <h3 class="text-center" style="color: green;">THÊM NHÀ CUNG CẤP</h3>
    @using (Html.BeginForm("ThemMoi", "NhaCungCap", FormMethod.Post))
    {
        <div class="form-group ">
            <label class="input-sm">Tên nhà cung cấp:</label>
            <input class="form-control input-sm" type="text" maxlength="100" name="TenNCC" required oninput="setCustomValidity('')" oninvalid="setCustomValidity('Tên nhà cung cấp không được để trống');" />
        </div>
        <div class="form-group ">
            <label class="input-sm">Địa chỉ:</label>
            <input class="form-control input-sm" type="text" maxlength="250" name="DiaChi" required oninput="setCustomValidity('')" oninvalid="setCustomValidity('Địa chỉ không được để trống');" />
        </div>
        <div class="form-group ">
            <label class="input-sm">Số điện thoại:</label>
            <input class="form-control input-sm" type="number" pattern="[0-9]" maxlength="11" name="SDT" required oninput="setCustomValidity('Số điện thoại không được bỏ trống')" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
        </div>
        <div class="form-group">
            <label class="input-sm">Nhóm nhà cung cấp:</label>
            <select name="NhomNCC" class="form-control input-sm">
                @foreach (var item in Model)
                {
                    <option value="@item.TenNhom">@item.TenNhom</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-floppy-save"></span> Lưu</button>
        </div>
    }
</body>