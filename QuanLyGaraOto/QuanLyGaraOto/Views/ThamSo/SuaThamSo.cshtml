@model QuanLyGaraOto.Models.BANGTHAMSO
@{
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
    ViewBag.Title = "Cập nhật tham số";
}
<head>
    <title>@ViewBag.Title</title>
</head>
<h2 class="text-center" style="color:green;">CẬP NHẬT THAM SỐ</h2>
@using (Html.BeginForm("SuaThamSo", "ThamSo", FormMethod.Post, new { @class = "form-horizontal"}))
{
    <div class="form-group form-inline">
        <label>Tham số:</label>
        <label>124234</label>
    </div>
    <div class="form-group form-inline">
        <label>Giá trị:</label>
        <input type="number" maxlength="10" class="form-control"/>
    </div>
    <button class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Lưu</button>
}


