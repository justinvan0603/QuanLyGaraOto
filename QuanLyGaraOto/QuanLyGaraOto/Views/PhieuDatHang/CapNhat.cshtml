        var trnoidung = "<tr class=\"record-template\" data-id=\"" + i + "\">" + tdnoidung + "</tr>";

        $("#chitietphieu-table").append(trnoidung);



        var maphutung = $('.cboPT').children("option").filter(":selected").attr("value");
