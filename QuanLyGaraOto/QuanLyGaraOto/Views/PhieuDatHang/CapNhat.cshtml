        var tien = soluong * dongia;
        var thanhtien = parseInt(tien);
        $('.lblThanhTien').text('');
        $('.lblThanhTien').text(parseInt(thanhtien));
        //alert('text changed');
    })
    $("#btnAdd").click(function () {
