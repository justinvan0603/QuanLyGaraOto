@model QuanLyGaraOto.ViewModel.SuaPhuTungViewModel
@{
    ViewBag.Title = "Cập nhật thông tin phụ tùng";
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
}
@Html.Raw(TempData["msg"])
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <h3 class="text-center" style="color: green;">CẬP NHẬT THÔNG TIN PHỤ TÙNG</h3>
    @using (Html.BeginForm("CapNhat", "PhuTung", FormMethod.Post))
    {
        <input type="hidden" name="ID" value="@Model.PhuTung.ID"/>
    <div class="form-group ">
        <label class="input-sm">Mã phụ tùng:</label>
        <input class="form-control input-sm" type="text" maxlength="20" name="MA_PHUTUNG" value="@Model.PhuTung.MA_PHUTUNG" required placeholder="PT00X" oninvalid="setCustomValidity('Mã phụ tùng không được để trống')"
               oninput="setCustomValidity('')" />
    </div>
        <div class="form-group ">
            <label class="input-sm">Tên phụ tùng:</label>
            <input class="form-control input-sm" type="text" maxlength="100" name="TEN_PHUTUNG" value="@Model.PhuTung.TEN_PHUTUNG" required oninvalid="setCustomValidity('Tên phụ tùng không được để trống')"
                   oninput="setCustomValidity('')" />
        </div>
        <div class="form-group">
            <label class="input-sm">Hiệu xe:</label>
            <select name="MA_HIEUXE" class="cboMaHieuXe form-control input-sm">
                @foreach (var item in Model.ListHieuXe)
                {
                    <option value="@item.MA_HIEUXE">@item.MA_HIEUXE</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span> Lưu</button>
        </div>
    }
</body>
<script>
    $('document').ready(function()
    {
        var id = '@Html.Raw(@Model.PhuTung.MA_HIEUXE)';
        $('.cboMaHieuXe').val(id).prop('selected', true);
    })
</script>
