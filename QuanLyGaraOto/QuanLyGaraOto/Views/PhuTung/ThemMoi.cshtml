@model List<QuanLyGaraOto.Models.HIEUXE>
@{
    ViewBag.Title = "Thêm thông tin phụ tùng";
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
}
@Html.Raw(TempData["msg"])
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
<h3 class="text-center" style="color: green;">THÊM THÔNG TIN PHỤ TÙNG</h3>
@using (Html.BeginForm("ThemMoi", "PhuTung", FormMethod.Post))
{
    <div class="form-group ">
        <label class="input-sm">Mã phụ tùng:</label>
        <input id="mapt" class="form-control input-sm" type="text" maxlength="20" name="MA_PHUTUNG" required oninput="setCustomValidity('')" oninvalid="setCustomValidity('Mã phụ tùng không được để trống')" />
    </div>
    <div class="form-group ">
        <label class="input-sm">Tên phụ tùng:</label>
        <input id="tenpt" class="form-control input-sm" type="text" maxlength="50" name="TEN_PHUTUNG" required oninput="setCustomValidity('')" oninvalid="setCustomValidity('Tên phụ tùng không được để trống')" />
    </div>
    <div class="form-group">
        <label class="input-sm">Hiệu xe:</label>
        <select name="MA_HIEUXE" class="form-control input-sm">
            @foreach (var item in Model)
            {
                <option value="@item.MA_HIEUXE">@item.MA_HIEUXE</option>
            }
        </select>
    </div>
    <div class="form-group ">
        <label class="input-sm">Thời hạn bảo hành (tháng):</label>
        <input id="thbh" class="form-control input-sm" type="number" maxlength="2" name="TG_BAOHANH" required oninput="setCustomValidity('')" oninvalid="setCustomValidity('Thời gian bảo hành không được để trống')" onkeypress="return event.charCode >= 48 && event.charCode <= 57" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-floppy-save"></span> Lưu</button>
    </div>
}
</body>


