@model QuanLyGaraOto.ViewModel.DSPhieuDVViewModel
@using PagedList.Mvc;
@{
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
    ViewBag.Title = "Danh sách phiếu dịch vụ";
}
<head>
    <title>@ViewBag.Title</title>
</head>
<style>
    .table th {
        width: auto !important;
    }
</style>
@Html.Raw(TempData["msg"])
<h3 class="text-center" style="color:green;">DANH SÁCH PHIẾU DỊCH VỤ</h3>




@using (@Html.BeginForm("Index", "PhieuDichVu", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-inline">
        <div class="form-group">
            <label for="searchOption">Tìm theo:</label>
            @Html.DropDownList("searchOption", Model.listSearchOption, new { @class = "form-control" })
            @* @Html.DropDownListFor(m => m.selectedValue, Model.listSearchOption, new { @class = "form-control" })*@

        </div>
        <div class="form-group">
            <label for="searchOption">Giá trị:</label>
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info" style="margin-top:25px;"><span class="glyphicon glyphicon-search"></span>Search</button>
        </div>
    </div>
}


<div class="table-responsive" style="padding-top:10px;">
    <table id="phieudv-table" class="table table-bordered table table-hover ">
        <thead style="color:red;">
            <tr>
                <th style="display:none">Id</th>
                <th>Mã số phiếu</th>
                <th>@Html.ActionLink("Ngày lập", "Index", new { sortOrder = ViewBag.DateSortParam, currentFilter = ViewBag.CurrentFilter, searchOption = ViewBag.CurrentSearchOption })<span class="glyphicon glyphicon-arrow-down"></span></th>
                <th>Người lập</th>
                <th>Thợ phụ trách</th>
                <th>@Html.ActionLink("Tổng tiền", "Index", new { sortOrder = ViewBag.TotalSortParam, currentFilter = ViewBag.CurrentFilter, searchOption = ViewBag.CurrentSearchOption })<span class="glyphicon glyphicon-arrow-down"></span></th>
                <th>@Html.ActionLink("Còn lại", "Index", new { sortOrder = ViewBag.RemainSortParam, currentFilter = ViewBag.CurrentFilter, searchOption = ViewBag.CurrentSearchOption })<span class="glyphicon glyphicon-arrow-down"></span></th>

                <th>Thao tác</th>


            </tr>
        </thead>
        <tbody>
            @{
                //List<ASPExample.Models.Product> listProduct = (List<ASPExample.Models.Product>)Model.listProduct;
                foreach (var item in Model.ListData.ToList())
                {
                    <tr class="clickable-row">
                        <td id="id" style="display:none">@item.Id_PhieuDV</td>
                        <td> @item.MaPhieuDV</td>
                        <td> @item.NgayLap</td>
                        <td> @item.TenNV</td>
                        <td> @item.TenTho</td>
                        <td> @Math.Round(item.TongTien)</td>
                        <td id="conlai"> @Math.Round(item.SoTienConLai)</td>
                        <td>

                            @Html.ActionLink("Sửa", "SuaPhieuDichVu", new { id = @item.Id_PhieuDV }, new { @class = "btn btn-warning glyphicon glyphicon-pencil" }) |
                            <a class="btnCreateBill btn btn-default glyphicon glyphicon-pencil" href="@Url.Action("NhapPhieuThu","PhieuThu",new {id = @item.Id_PhieuDV})">Lập phiếu thu</a>
                            <!--<button id="btnDelete" type="button" class="btn btn-danger glyphicon-remove">Delete</button>-->
                            <button class="btnDelete btn btn-danger glyphicon glyphicon-remove" type="button">Xóa</button>

                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
    Page @(Model.ListData.PageCount < Model.ListData.PageNumber ? 0 : Model.ListData.PageNumber) of @Model.ListData.PageCount

    @Html.PagedListPager(Model.ListData, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, searchOption = ViewBag.CurrentSearchOption }))
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $('.btnCreateBill').click(function (e) {
        var $item = $(this).closest("tr").find("#conlai").text();
        var value = $item.valueOf();
        if (value == 0) {
            e.preventDefault();
            alert("Phiếu dịch vụ này đã thanh toán đủ!")
        }

    })
    $('#phieudv-table').on('click', '.clickable-row', function (event) {
        if ($(this).hasClass('active')) {
            $(this).removeClass('active');
        } else {
            $(this).addClass('active').siblings().removeClass('active');
        }
    });




    $(document).ready(function () {
        $(".btnDelete").on("click", function (e) {
            e.preventDefault();
            var $item = $(this).closest("tr").find("#id").text();
            var itemid = $item.valueOf();


            var isSucess = -1;
            var message = "";
            var row = $(this).closest("tr");

            $.ajax({


                url: '/PhieuDichVu/Xoa/',

                data: JSON.stringify({ id: itemid }),

                type: 'POST',

                contentType: 'application/json; charset=utf-8',

                success: function (result) {
                    isSuccess = result.value;
                    message = result.message;

                },
                error: function (result) {
                    isSuccess = result.value;
                    message = result.message;
                }

            }).done(function () {
                if (isSuccess == "1") {
                    row.remove();
                    //alert(message);
                    // window.location.replace("index");
                }
                else {
                    //alert(message);
                }
            });
        })
    })

</script>