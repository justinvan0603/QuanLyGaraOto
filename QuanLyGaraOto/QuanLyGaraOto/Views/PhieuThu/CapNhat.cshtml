@model QuanLyGaraOto.ViewModel.PhieuThuViewModel
@{
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
    ViewBag.Title = "Cập nhật phiếu thu";
}
@Html.Raw(TempData["msg"])
<head>
    <title>@ViewBag.Title</title>
    <style>
        .table {
            border-bottom: 0px !important;
        }

            .table th, .table td {
                border: 1px !important;
            }

        .fixed-table-container {
            border: 0px !important;
        }
    </style>
</head>
<body>
    <h3 class="text-center" style="color: green;">CẬP NHẬT PHIẾU THU</h3>
    @using (Html.BeginForm("CapNhat", "PhieuThu", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.PhieuThu.ID_PHIEUTHUTIEN, Model)
        <table class="table borderless">
            <tr>
                <th class="col-xs-2"></th>
                <th class="col-xs-10"></th>
            </tr>
            <tbody>
                <tr>
                    <td><label>Mã phiếu thu:</label></td>
                    <td>@Html.TextBoxFor(m => m.PhieuThu.MAPHIEUTHU, new { @class = "form-control input-sm", oninput = "setCustomValidity('')", oninvalid = "setCustomValidity('Mã phiếu thu không được để trống');" })</td>
                </tr>
                <tr>
                    <td><label>Ngày lập:</label></td>
                    <td>@Html.TextBoxFor(m => m.PhieuThu.NGAYLAP, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm ngaylap", @readonly = "readonly" })</td>
                </tr>
                <tr>
                    <td><label>Tên nhân viên:</label></td>
                    <td>@Html.TextBoxFor(m => m.TenNV, new { @class = "form-control input-sm", @readonly = "readonly" })</td>
                </tr>
                <tr>
                    <td><label>Nội dung thu:</label></td>
                    <td>@Html.TextBoxFor(m => m.PhieuThu.NOIDUNG_THU, new { @class = "form-control input-sm", @readonly = "readonly" })</td>
                </tr>
                <tr>
                    <td><label>Số tiền thu:</label></td>
                    <td>@Html.TextBoxFor(m => m.PhieuThu.SOTIEN, "{0:#,###,###,###}",new { @class = "form-control input-sm sotien", @type = "number", oninput = "setCustomValidity('Số tiền không được bỏ trống')", onkeypress = "return event.charCode >= 48 && event.charCode <= 57" })</td>
                </tr>

            </tbody>
        </table>
        <div class="form-group">
            <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-floppy-save input-sm"></span> Lưu</button>
        </div>
    }
</body>


