@model QuanLyGaraOto.Models.KHACHHANG
@{
    ViewBag.Title = "Thêm Khách Hàng";
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
}
@Html.Raw(TempData["msg"])
<head>
    <title>@ViewBag.Title</title>
</head>

<h3 class="text-center" style="color:green;">THÔNG TIN KHÁCH HÀNG</h3>
@using (@Html.BeginForm("CapNhat", "KhachHang", FormMethod.Post))
{
    @Html.HiddenFor(m => m.MA_KH, Model)
    <div class="form-group">
        <label>Họ tên:</label>
        @Html.TextBoxFor(m => m.TEN_KH, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("TEN_KH", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <label>Số CMND:</label>
        @Html.TextBoxFor(m => m.CMND, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("CMND", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <label>Số điện thoại:</label>
        @Html.TextBoxFor(m => m.SDT, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("SDT", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <label>Địa chỉ:</label>
        @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("DIACHI", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span> Lưu</button>
    </div>
}

