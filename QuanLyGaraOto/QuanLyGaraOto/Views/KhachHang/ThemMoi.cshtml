@model QuanLyGaraOto.Models.KHACHHANG
@{
    ViewBag.Title = "Thêm Khách Hàng";
    Layout = "~/Views/Layout/_GeneralLayout.cshtml";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Html.Raw(TempData["msg"])
<head>
    <title>@ViewBag.Title</title>
</head>
<h3 class="text-center" style="color:green;">THÔNG TIN KHÁCH HÀNG</h3>
@using(@Html.BeginForm("ThemMoi","KhachHang",FormMethod.Post))
{
    <div class="form-group">
        <label class="input-sm" >Họ tên:</label>
        @*<input type="text" maxlength="100" name="TEN_KH" class="form-control input-sm"/>*@
        @Html.TextBoxFor(m => m.TEN_KH, new { @class="form-control input-sm"})
        @Html.ValidationMessage("TEN_KH", new {@style = "color:red;" })
    </div>
    <div class="form-group">
        <label class="input-sm">Số CMND:</label>
       @* <input type="number" maxlength="20" name="CMND" class="form-control input-sm" />*@
      @Html.TextBoxFor(m => m.CMND, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("CMND", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <label class="input-sm">Giới tính:</label>
        @*<input type="number" maxlength="20" name="SDT" class="form-control input-sm" />*@
        @*<label class="radio-inline"><input type="radio" name="GIOITINH" value="true" checked="checked">Nam</label>*@
        <label class="radio-inline">@Html.RadioButtonFor(m => m.GIOITINH, "true", new { @class = " input-sm", @checked = "checked" }) Nam</label>
        <label class="radio-inline">@Html.RadioButtonFor(m => m.GIOITINH, "false", new { @class = " input-sm" }) Nữ</label>
        @*@Html.RadioButtonFor(m => m.GIOITINH, "false", new { @class = "radio-inline input-sm" })<span>Nữ</span>*@

    </div>
    <div class="form-group">
        <label class="input-sm">Số điện thoại:</label>
        @*<input type="number" maxlength="20" name="SDT" class="form-control input-sm" />*@
        @Html.TextBoxFor(m => m.SDT, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("SDT", new { @style = "color:red;" })

    </div>
    <div class="form-group">
        <label class="input-sm">Địa chỉ:</label>
        @*<input type="text" maxlength="255" name="DIACHI" class="form-control input-sm" />*@
        @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control input-sm" })
        @Html.ValidationMessage("DIACHI", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span> Lưu</button>
    </div>
}
<script>
        $('document').ready(function () {
            $("#radio-element").attr('checked', true);
        })
</script>